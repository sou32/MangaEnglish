<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="MangaEnglish.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MangaEnglish.Pages"
    FlyoutBehavior="Disabled">

    <ShellContent Route="home"
                  ContentTemplate="{DataTemplate pages:HomePage}" />

    <ShellContent Route="titles"
                  ContentTemplate="{DataTemplate pages:TitleSelectPage}" />

    <ShellContent Route="chapters"
                  ContentTemplate="{DataTemplate pages:ChapterSelectPage}" />

    <ShellContent Route="learning"
                  ContentTemplate="{DataTemplate pages:LearningPage}" />

    <ShellContent Route="result"
                  ContentTemplate="{DataTemplate pages:ResultPage}" />

    <ShellContent Route="settings"
                  ContentTemplate="{DataTemplate pages:SettingsPage}" />

</Shell>